@page
@model SodaMachineRazorPages.Pages.Admin.CoinInventory.IndexModel
@{
    ViewData["Title"] = "Admin Coin Inventory";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-8">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Coin Name</th>
                        <th scope="col">Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kv in Model.CoinsQuantity)
                    {
                        <tr scope="row">
                            <td>
                                @kv.Key
                            </td>
                            <td>
                                @kv.Value
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-4">
            <form method="post" asp-page-handler="AddCoin" class="ml-4">
                <div class="d-flex flex-row">
                    <select class="flex-grow-1" asp-for="SelectedCoin" asp-items="Model.CoinAddList">
                        <option value="">Select a coin</option>
                    </select>
                    <input class="ml-2 w-25" asp-for="SelectedCoinQuantity" placeholder="Quantity" />
                </div>
                <button class="mt-4 btn btn-block btn-outline-primary">ADD TO COIN INVENTORY</button>

                @if (@Model.Message != null)
                {
                    @if (@Model.Message.Contains("Successfully"))
                    {
                        <span class="text-success">@Model.Message</span>
                    }
                    else
                    {
                        <span class="text-danger">@Model.Message</span>
                    }
                }
            </form>
        </div>
    </div>
</div>

