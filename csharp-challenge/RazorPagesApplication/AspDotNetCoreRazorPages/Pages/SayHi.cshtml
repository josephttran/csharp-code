@page
@model AspDotNetCoreRazorPages.Pages.SayHiModel
@{
    ViewData["Title"] = "SayHi";
}

@{
    if (ModelState.IsValid)
    {
        <h1 class="text-center">Hi @Model.PersonName</h1>
    }
    else
    {
        <h1 class="text-center">Hi</h1>
    }
}

<form method="post">
    <div class="form-group">
        <label asp-for="PersonName">Your name</label>
        <input asp-for="PersonName" class="form-control"/>
        <span asp-validation-for="PersonName" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" class="btn btn-primary form-control"/>
    </div>
</form>



